<ul id="space_form_list">
  <%= form_for @space, :html => {:class => "spaceform"} do |f| %>


  <%= f.fields_for :photos, multipart: true do |builder| %>
    <div class="field">
      <%= builder.label :title %>
      <%= builder.text_field :title %>
    </div>
      <div class="field">
      <%= builder.label :short_description %>
      <%= builder.text_field :short_description %>
    </div>
    <div class="field">
      <%= builder.label :uploaded_photo %>
      <%= builder.file_field :uploaded_photo %>
    </div>
  <% end %>




 
  <div id="form_container"></div>
  <li><p>please provide a title for your space<br>this is how artists will search for your space<br><%= f.text_field   :title, placeholder: "Title", :required => true %></p></li>
  <li><p><%= f.text_area    :description, placeholder: "Please provide a description of your space. Include anything you may want to share with artists who will be renting your space.", size: "60x12", :required => true %></p></li>
  <li><p><%= f.text_field   :dimensions, placeholder: "Dimensions", :required => true %></p></li>

  <li><p>Amenities<br><%= f.text_area   :ammenities, placeholder: "Please list any equipment that is provided in the space.", size: "60x6", :required => true %></p></li>
  <p>Permitted Uses:</p>
  <p>
    <% for use in Use.find(:all) %>
      <div id="uses">
        <%= check_box_tag "space[use_ids][]", use.id, @space.uses.include?(use) %>
        <%= use.category %>
      </div>
    <% end %>
  </p>

  <li><p>please specify an hourly rental rate<br><%= f.number_field :rate, placeholder: "Rate", :required => true %></p></li>
  <li><p>street address<br><%= f.text_field   :address, placeholder: "Address", :required => true %></p></li>
  <li><p><%= f.text_field   :city, placeholder: "City", :required => true %></p></li>
  <li><p><%= f.text_field   :state, placeholder: "State", :required => true %></p></li>
  <li><p><%= f.text_field :zipcode, placeholder: "Zipcode", :required => true %></p></li>
  <li><p>I would like to receive emails regarding rentals here<br><%= f.email_field  :email, placeholder: "Email", :required => true %></p></li>
  <li><p>business phonenumber<br><%= f.text_field :phone, placeholder: "Phone" %></p></li>
  <li><%= f.submit "Add Available times", class: "main_button gray_button pic_validate"%></li>
  <% end %>
</ul>
