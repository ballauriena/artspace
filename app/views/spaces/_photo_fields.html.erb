<p class="photo_fields">
    <%= f.text_field :title, placeholder: "Title" %><br>

    <%= f.text_field :short_description, placeholder: "Short Description" %><br>

    <%= f.label :photo %>
    <%= f.file_field :uploaded_photo %><br>

    <%= f.hidden_field :_destroy %>
    <%= link_to_function "remove", "remove_photos(this)", { :class => "remove_photo_link"} %>
  </p>